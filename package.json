{
  "name": "snapp-vtt",
  "version": "0.1.0",
  "private": true,
  "description": "Virtual Table Top (VTT) system with explicit ADRs, TypeScript, Next.js UI, and RESTful services.",
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:world\" \"npm run dev:campaign\" \"npm run dev:assets\" \"npm run dev:web\"",
    "dev:web": "tsx apps/web/next-https-dev.ts",
    "dev:auth": "tsx apps/services/auth/server.ts",
    "dev:world": "tsx apps/services/world/server.ts",
    "dev:campaign": "tsx apps/services/campaign/server.ts",
    "dev:assets": "tsx apps/services/assets/server.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "npm run test:e2e:generate && playwright test",
    "test:e2e:debug": "npm run test:e2e:generate && playwright test --workers=1",
    "test:e2e:generate": "npx playwright-bdd test",
    "test:unit": "vitest run --config vitest.config.mts",
    "build": "next build apps/web",
    "lint": "eslint .",
    "cli:auth": "tsx apps/services/auth/cli.ts",
    "cli:world": "tsx apps/services/world/cli.ts",
    "cli:campaign": "tsx apps/services/campaign/cli.ts",
    "seed": "tsx apps/tools/seed-cli.ts seed",
    "seedAll": "tsx apps/tools/seed-cli.ts seedAll",
    "start": "tsx apps/tools/start-with-seed.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.17.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/yargs": "^17.0.32",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "jsdom": "^27.3.0",
    "playwright-bdd": "^7.0.0",
    "postcss": "^8.5.6",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "http-proxy": "^1.18.1",
    "jsonwebtoken": "^9.0.0",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "yargs": "^17.7.2"
  }
}
